{
  "manifest_version": 2,

  "name": "Comments Filter for Facebook",
  "description": "Simplifies search of comments.",
  "version": "0.5",

  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "css": ["content.css"],
      "js": ["jquery.min.js", "content.js"]
    }
  ],

  "web_accessible_resources": [
    "comment.png"
  ]
}
